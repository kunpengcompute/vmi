<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CloudPhoneUI" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#008688</item>
        <item name="colorPrimaryDark">#008688</item>
        <item name="colorAccent">#008688</item>
    </style>

    <style name="Theme.CloudPhoneUI.Fullscreen" parent="Theme.CloudPhoneUI">
        <item name="android:actionBarStyle">@style/Widget.Theme.CloudPhoneUI.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.CloudPhoneUI.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>